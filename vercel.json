{
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.js" }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "includeFiles": "wp/**"
    }
  },
  "builds": [
    { "src": "build.sh", "use": "@vercel/static-build", "config": { "distDir": "public" } }
  ],
  "build": {
    "env": {
      "NODEJS_AWS_HANDLER_NAME": "handler"
    }
  }
}
